{% extends 'PartiDeGaucheElectionsBundle::layout.html.twig' %}

{% form_theme form 'PartiDeGaucheElectionsBundle:Form:fields.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            {{ form(form) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p>
                {% if territoires|length < 90 %}
                    La recherche a retourné {{ territoires|length }} résultat(s).
                {% elseif territoires|length == 90 %}
                    La recherche a retourné plus de 90 résultats. Il est conseillé
                    d'affiner la recherche.
                {% endif %}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <table class="table">
                {% for territoire in territoires %}
                    <tr>
                        <td>
                            {% if territoire|resultatsLink != '' %}
                                <a href="{{ territoire|resultatsLink }}">{{ territoire|display }}</a>
                            {% else %}
                                {{ territoire|display }}
                            {% endif %}
                        </td>
                    </tr>
                    {% if (loop.index % 30) == 0 %}
                        </table></div>
                        <div class="col-md-4"><table class="table">
                    {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascript %}
  <script>
    var selectizeOptions = {
      valueField: 'url',
      searchField: 'nom',
      labelField: 'nom',
      create: function(input, callback) {
        return {
            nom: input,
            url: '{{ path('rechercher') }}/' + input
        };
      },
      load: function(query, callback) {
          if (!query.length) return callback();
          $.ajax({
              url: '{{ path('rechercher_json') }}/' + query,
              type: 'GET',
              dataType: 'json',
              error: function() {
                  callback();
              },
              success: function(res) {
                  callback(res);
              }
          });
      },
      render: {
        option_create: function(item, escape) {
          return '<div class="create">Rechercher "' + item.input + '"</div>';
        }
      },
      maxItems: 1,
      addPrecedence: true,
      dropdownParent: 'body',
      onChange: function(value) {
        window.location.href = value;
      }
    };
    $(function() {
      var $select = $('#form_terme').selectize(selectizeOptions);
      $select[0].selectize.clear();
      $select[0].selectize.clearOptions();

      $('#form_Rechercher').click(function() {
        return false;
      });
    });
  </script>
{% endblock %}

